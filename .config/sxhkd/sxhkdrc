#
# bspwm hotkeys
#

# quit bspwm
super + shift + end
	bspc quit

# restart bspwm and sxhkd
super + shift + r
	bspc wm -r ;\
	pkill -USR1 sxhkd

# close and kill
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

#
# program shortcuts
#

# open a terminal
super + Return
	urxvt

super + e
	urxvt -e ranger

#
# focus/swap
#

# focus/move the node in the given direction
super + {_,shift + }{j,k,l,ntilde}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus/move the given desktop
super + {_,shift +} {1,2,3,4,5,6,7,8,9,0,F1,F7}
	bspc {desktop -f ,node -d } {"","","","","","","","","","","",""}

#
# multi-monitor hotkeys
#

super + alt + Left
	desk=`bspc query -D -d focused`; \
	bspc desktop -m prev; \
	bspc monitor -f prev; \
	bspc desktop -f $desk

super + alt + Right
	desk=`bspc query -D -d focused`; \
	bspc desktop -m next; \
	bspc monitor -f next; \
	bspc desktop -f $desk
